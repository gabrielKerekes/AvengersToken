<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.avengers.avengerstoken.SynchronizeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fill out credentials"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#31535c"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/unameTttttt"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#31535c"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_style"
        android:id="@+id/unameT"
        android:gravity="center_horizontal|center_vertical"
        android:layout_below="@+id/unameTttttt"
        android:layout_alignLeft="@+id/passwdT"
        android:layout_alignStart="@+id/passwdT"
        android:layout_alignRight="@+id/passwdT"
        android:layout_alignEnd="@+id/passwdT" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textView11"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#31535c"
        android:layout_below="@+id/unameT"
        android:layout_alignLeft="@+id/unameTttttt"
        android:layout_alignStart="@+id/unameTttttt"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Synchronize"
        android:id="@+id/syncButt"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_style"
        android:layout_below="@+id/passwdT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@drawable/edittext_style"
        android:gravity="center_horizontal|center_vertical"
        android:ems="10"
        android:id="@+id/passwdT"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
